<h1>Notes</h1>

<%- @notes.each do |note| -%>
  <h2><%= h note.header %></h2>
  <strong>by: <%= link_to_twitter(note.tweet.user.name) %></strong>
  <%- unless note.url.blank? -%>
    <p>link: <%= link_to note.url, note.url %></p>
  <%- end -%>
  <%- note.tweet.children.each do |tweet| -%>
    <p><%= message(tweet.message) %></p>
  <%- end -%>
<%- end -%>

